@model Hushhlist.Models.ViewModels.HostEventsViewModel

<h1>Gifts Index</h1>

<table>
    <thead>
        <tr>
            <th>Item name</th>
            <th>Description</th>
            <th>Status</th>
            <th>Reserved by</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Gifts.Count(); i++)
        {
            <tr>
                <td><a asp-controller="Gift" asp-action="Details" asp-route-GiftId="@Model.Gifts[i].GiftId">@Model.Gifts[i].ItemName</a></td>
                <td>@Model.Gifts[i].ItemDescription</td>
                <th>
                    @if (@Model.Gifts[i].Status == null) {
                        <a asp-action="Assign" asp-route-GiftId="@Model.Gifts[i].GiftId" asp-route-Status="Reserved">Reserve</a>
                        <a asp-action="Assign" asp-route-GiftId="@Model.Gifts[i].GiftId" asp-route-Status="Bought">Mark as bought</a>
                    }
                    else
                    {
                        @Model.Gifts[i].Status
                        <a asp-action="Unassign" asp-route-GiftId="@Model.Gifts[i].GiftId">Unassign</a>
                    }
                </th>
                <th>@Model.Gifts[i].GuestId</th>
            </tr>
        }
    </tbody>
</table>